<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoAppMovil.Registros">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Registros de Bitacora"
               FontSize="Title"
                HorizontalOptions="CenterAndExpand" VerticalOptions="Fill" />
            <Button x:Name="btnRegistro" Text="Conductor"   CornerRadius="30" FontSize="Title" TextColor="White" BackgroundColor="CadetBlue" Clicked="btnRegistro_Clicked"/>
            <Button x:Name="btnRecarga" Text="Recargas"   CornerRadius="30" FontSize="Title" TextColor="White" BackgroundColor="CadetBlue" Clicked="btnRecarga_Clicked" />
            <Button x:Name="btnHoja" Text="Actividades"   CornerRadius="30" FontSize="Title" TextColor="White" BackgroundColor="CadetBlue" Clicked="btnHoja_Clicked" />
            <Button x:Name="btnIncidente" Text="Incidentes"   CornerRadius="30" FontSize="Title" TextColor="White" BackgroundColor="CadetBlue" Clicked="btnIncidente_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>