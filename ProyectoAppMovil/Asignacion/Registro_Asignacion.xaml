<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoAppMovil.Registro_Asignacion">
    <ContentPage.Content>
        <StackLayout BackgroundColor="LightBlue"
                     Margin="5">
            <Label Text="Lista de Conductores"
                   HorizontalOptions="Center"
                   BackgroundColor="WhiteSmoke"/>
            <ListView x:Name="ListaConductores">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding nombre}" Detail="{Binding apellido}"></TextCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>